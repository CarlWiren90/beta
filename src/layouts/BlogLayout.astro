---
import Layout from './Layout.astro'

interface Props {
  title: string
  author: string
  date: string
  description: string
}

const { title, author, date, description } = Astro.props
---

<Layout title={title}>
  <article class="mx-auto max-w-3xl px-4 py-12">
    <header class="mb-8">
      <h1 class="mb-2 text-4xl font-bold">{title}</h1>
      <p class="text-lg text-gray-400">{description}</p>
      <div class="mt-4 flex gap-2 text-sm text-gray-500">
        <span>{author}</span>
        <span>â€¢</span>
        <time datetime={date}>{new Date(date).toLocaleDateString('sv-SE')}</time>
      </div>
    </header>
    <div class="prose prose-invert max-w-none">
      <slot />
    </div>
  </article>
</Layout>
