---
import Layout from '../layouts/Layout.astro'
import { Company } from '../components/ui/company.tsx'
import '../../app/globals.css'
import data from '../data/Lifco_Group.json'
---

<Layout title="Welcome to Astro.">
  <main class="flex flex-wrap gap-2">
    <Company company={data} className="flex w-1/3" />
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    max-width: calc(100% - 2rem);
    color: black;
    font-size: 20px;
    line-height: 1.6;
  }
</style>
