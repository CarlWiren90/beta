---
interface Props {
  title: string
  data: number | string
}

const { title, data } = Astro.props
---

<div class="flex items-center justify-between">
  <div class="text-2xl">{title}</div>
  <div class="flex items-center gap-2 text-lg font-bold sm:text-2xl">
    <div class="rounded-full bg-gray-800 px-4 py-2">
      {data}
    </div>
  </div>
</div>
