---
import { getCollection } from 'astro:content'

const posts = await getCollection('blog')
posts.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())

const { currentSlug } = Astro.props
---

<aside class="hidden lg:block w-64 pl-8">
  <h2 class="text-xl font-medium mb-4">Tidigare inl√§gg</h2>
  <ul class="space-y-4">
    {posts.map((post) => (
      <li class={currentSlug === post.slug ? 'text-primary' : 'text-gray-300 hover:text-primary'}>
        <a href={`/blog/${post.slug}`} class="block">
          <h3 class="font-medium mb-1">{post.data.title}</h3>
          <time datetime={post.data.date} class="text-sm">
            {new Date(post.data.date).toLocaleDateString('sv-SE')}
          </time>
        </a>
      </li>
    ))}
  </ul>
</aside>
